<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/am_black_dark"
    tools:context=".MainActivity">

    <!-- Top-right 'Cancel' -->
    <TextView
        android:id="@+id/cancelText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textColor="@color/am_accent_red"
        android:textSize="16sp"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp" />

    <!-- Search bar -->
    <EditText
        android:id="@+id/searchField"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:hint="Artists, Songs, Lyrics, and More"
        android:textColor="@color/am_white"
        android:textColorHint="@color/am_gray_light"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:background="@drawable/bg_search_bar"
        android:drawablePadding="8dp"
        android:inputType="text"
        android:imeOptions="actionSearch"
        android:singleLine="true"
        android:drawableStart="@android:drawable/ic_menu_search"
        android:drawableEnd="@android:drawable/ic_btn_speak_now"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cancelText"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp" />

    <!-- Segmented control (Apple Music / Library style) -->
    <LinearLayout
        android:id="@+id/segmented"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:orientation="horizontal"
        android:padding="4dp"
        android:background="@drawable/bg_search_bar"
        app:layout_constraintTop_toBottomOf="@id/searchField"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp">

        <TextView
            android:id="@+id/tabAlligatorMusic"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Alligator Music"
            android:gravity="center"
            android:textColor="@color/am_white"
            android:textStyle="bold"
            android:background="@drawable/bg_segment_selected"/>

        <TextView
            android:id="@+id/tabLibrary"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Library"
            android:gravity="center"
            android:textColor="@color/am_white"
            android:background="@drawable/bg_segment_unselected"/>
    </LinearLayout>

    <!-- Section header -->
    <TextView
        android:id="@+id/recentlySearched"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recently Searched"
        android:textColor="@color/am_white"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/segmented"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/clearText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:textColor="@color/am_accent_red"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@id/recentlySearched"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"/>

    <!-- Row 1 -->
    <LinearLayout
        android:id="@+id/row1"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/recentlySearched"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <ImageView
            android:id="@+id/avatar1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/beetles"
            android:scaleType="centerCrop"
            android:contentDescription="Beetles"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The Insects"
                android:textColor="@color/am_white"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/sub1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Artist"
                android:textColor="@color/am_gray_light"
                android:textSize="14sp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@android:drawable/ic_media_next"
            android:tint="@color/am_gray_light"/>
    </LinearLayout>

    <!-- Row 2 -->
    <LinearLayout
        android:id="@+id/row2"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/row1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <ImageView
            android:id="@+id/avatar2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/meg"
            android:scaleType="centerCrop"
            android:contentDescription="Megan Thee Reptilian"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Megan Thee Reptilian"
                android:textColor="@color/am_white"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/sub2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Artist"
                android:textColor="@color/am_gray_light"
                android:textSize="14sp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@android:drawable/ic_media_next"
            android:tint="@color/am_gray_light"/>
    </LinearLayout>

    <!-- Row 3 -->
    <LinearLayout
        android:id="@+id/row3"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/row2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <ImageView
            android:id="@+id/avatar3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/doja"
            android:scaleType="centerCrop"
            android:contentDescription="Doja Dog"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Doja Dog"
                android:textColor="@color/am_white"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/sub3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Artist"
                android:textColor="@color/am_gray_light"
                android:textSize="14sp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@android:drawable/ic_media_next"
            android:tint="@color/am_gray_light"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>